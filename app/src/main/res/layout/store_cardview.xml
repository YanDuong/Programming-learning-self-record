<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        android:id="@+id/foodCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/cardview_default_elevation"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/ivStore"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitStart"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/image_of_store"
                />

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivStore"
                android:layout_marginStart="4dp"
                android:textColor="#111"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Fish Store"
                />
            <ImageView
                android:id="@+id/ivStoreOwner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvStoreName"
                android:layout_toEndOf="@id/ivStore"
                android:layout_marginStart="4dp"
                android:scaleType="fitStart"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="@string/image_of_owner" />
            <TextView
                android:id="@+id/tvStoreOwner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvStoreName"
                android:layout_toEndOf="@id/ivStoreOwner"
                android:textColor="#111"
                android:layout_marginStart="2dp"
                android:textSize="12sp"
                android:paddingStart="3dp"
                android:paddingEnd="0dp"
                tools:text="Nguyen The Anh"
                />
            <TextView
                android:id="@+id/tvStoreLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivStoreOwner"
                android:layout_toEndOf="@id/ivStore"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                tools:text="9 km Thanh Xuan Nguyen Trai Ha Noi"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



